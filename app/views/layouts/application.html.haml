!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title= content_for?(:title) ? yield(:title) : "VendorLight"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    / Le styles
    :css
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
    = stylesheet_link_tag "application", :media => "all"
    / Le fav and touch icons
    %link{:href => "images/favicon.ico", :rel => "shortcut icon"}/
    %link{:href => "images/apple-touch-icon.png", :rel => "apple-touch-icon"}/
    %link{:href => "images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}/
    %link{:href => "images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}/

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "#"}VendorLight
          .container.nav-collapse
            %ul.nav
              %li= link_to "Link 1", "/path1"
              %li= link_to "Link 2", "/path2"
              %li= link_to "Link 3", "/path3"
            %ul.nav.pull-right
              - ['Home', 'How it Works', 'Contact'].each do |model|
                - if controller_name == model.downcase
                  %li.active= link_to model, '#'#send("#{model.downcase}_path")
                - else 
                  %li= link_to model, '#'#send("#{model.downcase}_path")
              - if !user_signed_in?
                %li
                  = link_to 'Sign up', new_user_registration_path
                %li
                  = link_to 'Sign in', new_user_session_path
              - else
                %li.dropdown
                  %a.dropdown-toggle{ 'data-toggle' => 'dropdown' }
                    = current_user.full_name
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      = link_to 'My Account', '#'
                    %li.divider
                    %li
                      = link_to 'Sign Out', destroy_user_session_path, :method => :delete

    .container
      .row
        .span12
          - if flash[:notice].present?
            .alert.alert-block.alert-success
              %a.close{:data => { :dismiss => 'alert' }} x
              = flash[:notice]
          - if flash[:alert].present?
            .alert.alert-block
              %a.close{:data => { :dismiss => 'alert' }} x
              = flash[:alert]
          - if flash[:error].present?
            .alert.alert-error.alert-block
              %a.close{:data => { :dismiss => 'alert' }} x
              = flash[:error]
      .content
        .row
          .span12
            = yield
    
      %footer
        %p &copy; Company 2012
    /
      Le javascript
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
