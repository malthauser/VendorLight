%label{:class => "label"}= t("activerecord.attributes.client.title", :default => t("activerecord.labels.title", :default => "Title")) + ":"
%p= @client.title

.form-actions
  = link_to "Back", clients_path, :class => 'btn'
  = link_to "Edit", edit_client_path(@client), :class => 'btn'
  = link_to "Delete", client_path(@client), :method => "delete", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class => 'btn'
